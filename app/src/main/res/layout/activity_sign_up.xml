<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#121212"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1C1C1E"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Avatar circle on top -->
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="Avatar"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerInside"
                android:background="@drawable/circle_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create account"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#D1D1D6" />

            <!-- Nickname field -->
            <EditText
                android:id="@+id/inputNickname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Nickname"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textColor="#D1D1D6"
                android:textColorHint="#9A9A9A" />

            <EditText
                android:id="@+id/inputEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textColor="#D1D1D6"
                android:textColorHint="#9A9A9A" />

            <EditText
                android:id="@+id/inputPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Password"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textColor="#D1D1D6"
                android:textColorHint="#9A9A9A" />

            <EditText
                android:id="@+id/inputConfirmSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textColor="#D1D1D6"
                android:textColorHint="#9A9A9A" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:text="Sign Up"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:textColor="#FFFFFF" />

            <ProgressBar
                android:id="@+id/progressSignUp"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:visibility="gone"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>